<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state - touch press or D-pad / physical keyboard click -->
    <item android:drawable="@drawable/realtime_menu_systemstatus_pressed" android:state_pressed="true"/>

    <!-- Selected/Focused state - D-pad / physical keyboard -->
    <item android:drawable="@drawable/realtime_menu_systemstatus_pressed" android:state_selected="true"/>
    <item android:drawable="@drawable/realtime_menu_systemstatus_pressed" android:state_focused="true"/>

    <!-- Normal state -->
    <item android:drawable="@drawable/realtime_menu_systemstatus"/>

</selector>
