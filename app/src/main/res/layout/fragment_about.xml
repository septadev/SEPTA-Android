<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_page_gradient_background"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingTop="@dimen/activity_vertical_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.septa.android.app.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="-0.03"
                    android:text="The Official App of SEPTA"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    app:typeface="@string/font_roboto_bold" />

                <ImageView
                    android:id="@+id/septa_logo"
                    android:layout_width="58dp"
                    android:layout_height="57dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/septa_official_logo" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@android:color/white"
                android:elevation="@dimen/white_box_elevation"
                android:orientation="vertical">

                <org.septa.android.app.view.TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customer_service_gradient_background"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="-0.03"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:text="App Information"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    app:typeface="@string/font_roboto_bold" />

                <org.septa.android.app.view.TextView
                    android:id="@+id/device_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="10sp"
                    android:paddingLeft="15dp"
                    android:ellipsize="end"
                    android:paddingRight="15dp"
                    android:text="Device ID: 53b82a2d-0088-4728-915e-5562f0ef39ea"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:typeface="@string/font_roboto_light" />

                <org.septa.android.app.view.TextView
                    android:id="@+id/build_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="10sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="App Version: 2.0.0
Last App Update: 9/15/2017 04:07 PM
Last Schedule Update: 9/15/207 04:07 PM"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    app:typeface="@string/font_roboto_light" />

                <org.septa.android.app.view.TextView
                    android:id="@+id/feedback_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="@dimen/button_margin_horizontal"
                    android:layout_marginRight="@dimen/button_margin_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_gradient_background"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    android:text="Provide App Feedback"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:typeface="@string/font_roboto_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/attributions_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/white"
                    android:elevation="@dimen/white_box_elevation"
                    android:orientation="vertical">

                    <org.septa.android.app.view.TextView
                        android:id="@+id/attrib_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:drawableEnd="@drawable/alert_toggle_closed"
                        android:drawableRight="@drawable/alert_toggle_closed"
                        android:paddingBottom="21dp"
                        android:text="@string/activity_about_attributions"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:typeface="@string/font_roboto_medium" />

                    <LinearLayout
                        android:id="@+id/attrib_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:visibility="gone" />

                </LinearLayout>

                <org.septa.android.app.view.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:autoLink="web"
                    android:letterSpacing="-0.02"
                    android:paddingLeft="@dimen/indent_padding"
                    android:paddingRight="@dimen/indent_padding"
                    android:text="@string/activity_about_credits"
                    android:textColor="#2c2c2c"
                    android:textSize="12sp"
                    app:typeface="@string/font_roboto_regular" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>