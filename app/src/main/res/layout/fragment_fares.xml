<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_page_gradient_background"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <org.septa.android.app.view.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="12dp"
        android:letterSpacing="-0.02"
        android:text="SEPTA Fares"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        app:typeface="@string/font_roboto_bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="@dimen/white_box_elevation"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:id="@+id/key_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/septa_key_icon" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/septa_key_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/key_image"
                        android:letterSpacing="-0.02"
                        android:text="SEPTA Key"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:typeface="@string/font_roboto_light" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/key_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/septa_key_label"
                        android:layout_toEndOf="@id/key_image"
                        android:layout_toRightOf="@id/key_image"
                        android:lineSpacingExtra="3sp"
                        android:text="The Key Card is a contactless chip card and can be loaded and reloaded."
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_regular" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/septa_key_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/key_card_text"
                        android:layout_toEndOf="@id/key_image"
                        android:layout_toRightOf="@id/key_image"
                        android:lineSpacingExtra="3sp"
                        android:text="Learn More about SEPTA Key Â»"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:id="@+id/cash_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/cash_icon" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/cash_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/cash_image"
                        android:layout_toRightOf="@id/cash_image"
                        android:letterSpacing="-0.02"
                        android:text="Cash"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:typeface="@string/font_roboto_light" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/cash_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cash_label"
                        android:layout_toEndOf="@id/cash_image"
                        android:layout_toRightOf="@id/cash_image"
                        android:text="@string/cash_text"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_regular" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:id="@+id/weekly_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/weekly_icon" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/weekly_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/weekly_image"
                        android:layout_toRightOf="@id/weekly_image"
                        android:letterSpacing="-0.02"
                        android:text="TransPass"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:typeface="@string/font_roboto_light" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/weekly_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/weekly_label"
                        android:layout_toEndOf="@id/weekly_image"
                        android:layout_toRightOf="@id/weekly_image"
                        android:text="@string/weekly_text"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_regular" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:id="@+id/trail_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/trail_pass_icon" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/trail_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/trail_image"
                        android:layout_toRightOf="@id/trail_image"
                        android:letterSpacing="-0.02"
                        android:text="TrailPass"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:typeface="@string/font_roboto_light" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/trail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/trail_label"
                        android:layout_toEndOf="@id/trail_image"
                        android:layout_toRightOf="@id/trail_image"
                        android:text="@string/trail_text"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_regular" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:id="@+id/cross_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/cross_country_icon" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/cross_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/cross_image"
                        android:layout_toRightOf="@id/cross_image"
                        android:letterSpacing="-0.02"
                        android:text="Cross County Pass"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:typeface="@string/font_roboto_light" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/cross_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cross_label"
                        android:layout_toEndOf="@id/cross_image"
                        android:layout_toRightOf="@id/cross_image"
                        android:text="@string/cross_text"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_regular" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:id="@+id/one_day_con_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/one_day_icon" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/one_day_con_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/one_day_con_image"
                        android:layout_toRightOf="@id/one_day_con_image"
                        android:letterSpacing="-0.02"
                        android:text="One Day Convenience Pass"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:typeface="@string/font_roboto_light" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/one_day_con_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/one_day_con_label"
                        android:layout_toEndOf="@id/one_day_con_image"
                        android:layout_toRightOf="@id/one_day_con_image"
                        android:text="@string/one_day_con_text"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_regular" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="27dp">

                    <ImageView
                        android:id="@+id/one_day_ind_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/independence_icon" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/one_day_ind_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/one_day_ind_image"
                        android:layout_toRightOf="@id/one_day_ind_image"
                        android:letterSpacing="-0.02"
                        android:text="One Day Independence Pass"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:typeface="@string/font_roboto_light" />

                    <org.septa.android.app.view.TextView
                        android:id="@+id/one_day_ind_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/one_day_ind_label"
                        android:layout_toEndOf="@id/one_day_ind_image"
                        android:layout_toRightOf="@id/one_day_ind_image"
                        android:text="@string/one_day_ind_text"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:typeface="@string/font_roboto_regular" />

                </RelativeLayout>

                <org.septa.android.app.view.TextView
                    android:id="@+id/more_about_fares_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/button_gradient_background"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="More About SEPTA Fares"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:typeface="@string/font_roboto_bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>