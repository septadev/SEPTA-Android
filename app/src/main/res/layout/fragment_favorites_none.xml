<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorites_none_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_page_gradient_background"
    android:orientation="vertical">

    <org.septa.android.app.view.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Love your favorite trips!"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        app:typeface="@string/font_roboto_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <org.septa.android.app.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_bus_blue"
            android:gravity="center"
            android:text="Bus"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:typeface="@string/font_roboto_medium" />

        <org.septa.android.app.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_rail_blue"
            android:gravity="center"
            android:text="Rail"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:typeface="@string/font_roboto_medium" />

        <org.septa.android.app.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_subway_blue"
            android:gravity="center"
            android:text="Subway"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:typeface="@string/font_roboto_medium" />

        <org.septa.android.app.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_trolley_blue"
            android:gravity="center"
            android:text="Trolley"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:typeface="@string/font_roboto_medium" />

        <org.septa.android.app.view.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/ic_nhsl_blue"
            android:gravity="center"
            android:text="NHSL"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            app:typeface="@string/font_roboto_medium" />

    </LinearLayout>

    <org.septa.android.app.view.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="Save your SEPTA trips as a favorite to get &lt;b>immediate access&lt;/b> to the Next to Arrive transit, and route schedule."
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        app:typeface="@string/font_roboto_medium" />

    <org.septa.android.app.view.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="23dp"
        android:drawableLeft="@drawable/ic_favorite_available"
        android:drawablePadding="13dp"
        android:drawableTint="@color/text_primary"
        android:text="Find a trip, then use the favorite icon to add it to your Favorites."
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        app:typeface="@string/font_roboto_light" />

    <org.septa.android.app.view.TextView
        android:id="@+id/add_favorite_button"
        android:layout_width="293dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_gradient_background"
        android:gravity="center"
        android:text="Add Favorite"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:typeface="@string/font_roboto_medium" />

</LinearLayout>